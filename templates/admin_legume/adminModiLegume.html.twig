        Modification {{legume.nom}} 
    {% else %}
        New Legume
    {% endif %}

{% endblock %}



{% block body %}
<div class="container">


<img style="width: 150px " src="{{asset('img/' ~ legume.img)}}" alt="">
{{form_start(form)}}
